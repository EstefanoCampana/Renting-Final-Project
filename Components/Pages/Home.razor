@page "/"

<div class="text-center mb-4">
    <h1 class="fw-bold text-primary">Village Rentals</h1>
    <h5>Choose from the following</h5>
</div>

<div class="d-flex justify-content-around mt-5">
    <div class="mx-2">
        <NavLink class="btn btn-primary btn-lg flex-fill" style="min-width: 150px;" href="rent">Rent</NavLink>
    </div>
    <div class="mx-2">
        <NavLink class="btn btn-secondary btn-lg flex-fill" style="min-width: 150px;" href="inventory" @onclick="() => createJSON()">Inventory</NavLink>
    </div>
    <div class="mx-2">
        <NavLink class="btn btn-fifth btn-lg flex-fill" style="min-width: 150px;" href="customerMain">Customer</NavLink>
    </div>
</div>

@code{

    public void createJSON()
    {
        if (File.Exists(Path.Combine(Directory.GetCurrentDirectory(), @"..\..\..\..\Resources\Res\items_data.json")) == true)
        {
            return;
        }
        else
        {
            File.Create(Path.Combine(Directory.GetCurrentDirectory(), @"..\..\..\..\Resources\Res\items_data.json"));
            File.Create(Path.Combine(Directory.GetCurrentDirectory(), @"..\..\..\..\Resources\Res\unused_items.json"));
        }

    }

}