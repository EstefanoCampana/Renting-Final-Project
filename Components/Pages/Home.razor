@page "/"

<div class="text-center mb-4">
    <h1 class="fw-bold">Home</h1>
    <h5>What would you like to do today?</h5>
</div>

<div class="d-flex justify-content-around mt-5">
    <div class="mx-0">
        <NavLink class="btn btn-primary btn-lg" href="rent">Rent</NavLink>
    </div>
    <div class="mx-0">
        <NavLink class="btn btn-secondary btn-lg" href="inventory" @onclick="() => createJSON()">Inventory</NavLink>
    </div>
    <div class="mx-0">
        <NavLink class="btn btn-fifth btn-lg" href="customer">Customer</NavLink>
    </div>
</div>

@code{

    public void createJSON()
    {
        if (File.Exists(Path.Combine(Directory.GetCurrentDirectory(), @"..\..\..\..\Resources\Res\items_data.json")) == true)
        {
            return;
        }
        else
        {
            File.Create(Path.Combine(Directory.GetCurrentDirectory(), @"..\..\..\..\Resources\Res\items_data.json"));
        }

    }

}