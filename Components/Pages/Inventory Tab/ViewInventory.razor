@page "/viewInv"

<h3>Inventory</h3>

<div class="grid-container">
    @if(items.Count <= 1)
    {
        <div class="card">
            <div class="card-image">
                <img src="your-image.jpg" alt="Equipment" />
            </div>
            <div class="card-label">Equipment Preview</div>
        </div>
    }
    else
    {
        @foreach (ItemModel item in items)
        {
            <div class="card">
                <div class="card-image">
                    <img src="your-image.jpg" alt="Equipment" />
                </div>
                <div class="card-label">Equipment Preview</div>
            </div>
        }
    }
</div>

@code{
    List<ItemModel> items = ItemModelManager.GetItems();
}

