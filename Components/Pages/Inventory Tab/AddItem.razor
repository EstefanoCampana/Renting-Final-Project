@page "/addItem"

<div class="d-flex justify-content-between">
	<div class="container-md image-pick">
		<p>Equipment Preview</p>
	</div>
    <EditForm Model>
        <div class="form-group mb-3">
            <label for="title">Title</label>
            <InputText id="title" class="form-control" />
        </div>

        <div class="form-group my-4">
            <label for="author">Author</label>
            <InputText id="author" class="form-control"/>
        </div>

        <div class="form-group mb-3">
            <label for="category">Category</label>
            <InputText id="category" class="form-control"/>
        </div>

        <div class="form-group mb-3">
            <label for="description">Description</label>
            <InputTextArea class="form-control"/>
        </div>

        <div class="text-center">
            <button class="btn btn-primary mb-3">Update book</button>
        </div>
    </EditForm>
</div>

