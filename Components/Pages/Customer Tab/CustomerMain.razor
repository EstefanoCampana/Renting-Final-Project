@page "/customerMain"
@using Renting.Models
@inject NavigationManager NavManager

<div class="d-flex justify-content-between align-items-center mb-4">
    <button class="btn btn-info" @onclick="GoBack">← Back</button>

    <h2 class="fw-bold text-center flex-grow-1 m-0">Customers</h2>

    <div style="width: 100px;"></div>
</div>

<div class="border rounded bg-light p-4 shadow-sm">
    <div class="d-flex justify-content-around">
        <div class="mx-2" style="width: 200px;">
            <NavLink class="btn btn-primary btn-lg w-100" href="/addCustomer">Add Customer</NavLink>
        </div>
        <div class="mx-2" style="width: 200px;">
            <NavLink class="btn btn-secondary btn-lg w-100" href="/customerList">View Customers</NavLink>
        </div>
    </div>
</div>

@code {
    private void GoBack()
    {
        NavManager.NavigateTo("/customerMain");
    }
}